{% extends 'base.html.twig' %}

{% block title %}Hello CursusController!
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}
	<ul>
		{% for lesson in cursus.lessons %}
			<li class="lesson-list-item">
				<h2>{{ lesson.name }}</h2>
				<p class="price">Prix:
					{{ lesson.price }}
					â‚¬</p>
				<div>

					{% if not certificationStatus[lesson.id] %}

						<a href="{{path('app_course', {'id':lesson.id}) }}">
							<button>Commencer le cours</button>
						</a>
						<form action="{{ path('cart_addLesson', {'id': lesson.id}) }}" method="POST">
							<button class="" type="submit">Ajouter au panier</button>
						</form>

					{% else %}
						<a href="{{path('app_course', {'id':lesson.id}) }}">
							<button>Revoir le cours</button>
						</a>
					{% endif %}
				</div>

			</li>
		{% endfor %}
	</ul>
	{% include "footer.html.twig" %}
{% endblock %}
