{% extends 'base.html.twig' %}

{% block title %}Hello CursusController!
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}
	<main>
		<ul class="cursus-list">
			{% for cursus in theme.cursus %}
				<li class="card">
					<div class="card-img">
						<img src="{{asset('img/board-5599231_640.png')}}" alt="">
					</div>
					<div class="card-body">
						<h2>{{ cursus.name }}</h2>
						<p class="price">Prix:
							{{ cursus.price }}
							€</p>
						<div>
							<a href="{{path('app_lesson', {'id':cursus.id}) }}">
								<button>Voir les leçons</button>
							</a>
							<form action="{{ path('cart_addCursus', {'id': cursus.id}) }}" method="POST">
								<button class="btn-danger" type="submit">Acheter</button>
							</form>
						</div>

					</div>
				</li>

			{% endfor %}
		</ul>
	</main>
	{% include "footer.html.twig" %}
{% endblock %}
